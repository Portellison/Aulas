CALCULADORA DE IMC


#include <stdio.h>

int main(void) {
    float Altura = 0;
    float Peso = 0;
    
    printf("Digite sua altura em metros:");
    scanf("%f", &Altura);
    
    printf("Digite seu peso em quilogramas: ");
    scanf("%f", &Peso);
    
    
    
    float IMC = Peso / (Altura * Altura);
    
    printf("Seu IMC é %.2f", IMC);

    if(IMC <= 18.5){
        printf("\n Você está em subpeso");
    }  
       else if (IMC >= 18.6 && IMC <= 24.9){
            printf("\nSeu peso está adequado");
        }
        
        else if (IMC >= 25.0 && IMC <= 29.9){
            printf("\nVocê está com sobrepeso");
        }
        
        else if(IMC >= 30.0 && IMC <= 34.9){
            printf("\nVocê está com obseidade grau 1");
            
        }
        
        else if (IMC >= 35.0 && IMC <= 39.9){
            printf("Você está com obesidade grau 2");
        }
        
        else if (IMC >= 40.0){
            printf("\nVocê está em obesidade mórbida");
        }
    

    

    return 0;
}




TRIANGULO RETANGULO


#include <stdio.h>

int main(void) {

    int lado1;
    int lado2;
    int lado3;
    
    
    printf("Digite os lados do triangulo em ordem crescente. Lado 1: ");
    scanf("%d", &lado1);
    
    printf("Digite o lado 2: ");
 
   scanf("%d", &lado2);
    
    printf("Digite o lado 3: ");
    scanf("%d", &lado3);
    
      float hipotenusa = (lado3 * lado3);
      float catetos = (lado1 * lado1) + (lado2 * lado2);
   
    if(hipotenusa == catetos){
        printf("Este triângulo é retângulo");
    }
    else{
        printf("Este triângulo não é rentângulo");
    }



    return 0;
}



MÉDIA DOS ALUNOS

#include <stdio.h>

int main(void) {
  float soma = 0;

  int numero;
    int contador = 0;
  printf("Digite um número (-1 para encerrar): ");
  scanf("%d", &numero);

  while(numero != -1) {
    soma = soma + numero;

    printf("Digite um número (-1 para encerrar): ");
    scanf("%d", &numero);
    
    contador += 1;
  }
    
    float media = soma / contador;
    
  printf("Resultado da soma: %.2f", soma);
  
  printf("\nResultado da média: %2.f", media);

  return 0;
}
